<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:weightSum="1">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ID"
            android:id="@+id/tv_regid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_regid"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#000"
            />

        <TextView
            android:text="NAME"
            android:id="@+id/tv_regname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_regname"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#000"
            />

        <TextView
            android:text="E-MAIL"
            android:id="@+id/tv_regemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:id="@+id/et_regemail"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#000"/>

        <TextView
            android:text = "Server IP Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:id="@+id/et_regip"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별을 선택하세요"
            android:id="@+id/textView3"></TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/bu_gender"
            android:text="성별"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이를 입력하시오" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:id="@+id/et_age" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키를 입력하시오"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:id="@+id/et_height" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몸무게를 입력하시오"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:id="@+id/et_weight" />

    </LinearLayout>


</ScrollView>



</LinearLayout>