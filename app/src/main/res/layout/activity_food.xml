<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/lo_foodLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        >


        <AutoCompleteTextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/FoodInput"
            android:hint="음식 이름" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_btn_search_button"
            android:id="@+id/btn_searchfood"
            android:focusable ="false"
            android:onClick="onClick" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_btn_searchmic"
            android:id="@+id/foodMic"
            android:focusable ="false"
            android:onClick="onClick"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_d_foodlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:background="#556496FF">
    </ListView>


</LinearLayout>
